    "version": "0.2.0",
    "configurations": [
        {
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "name": "Python: Current File",
            "type": "python",
            "program": "${file}",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": true,
            "purpose": ["debug-in-terminal"],
            "args": ["run","--no-debugger"]
        }
    ]
}
